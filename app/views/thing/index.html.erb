
<h1>Listing of Things</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @things.each do |thing| %>
  <tr>
    <td><%= thing.title %></td>
    <td><%= thing.description %></td>
    <td><%= link_to "Show", thing %></td>
    <td><%= link_to "Edit", edit_thing_path(thing) %></td>
    <td><%= link_to "Remove", thing, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

